<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".order_details">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/order_details_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/brown"
        android:minHeight="?attr/actionBarSize"
        />
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/coffee_logo"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:text="Cafe Fast"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:elevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="left"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="10dp"
                    android:textSize="17dp"
                    android:layout_width="wrap_content"
                    android:text="Order id"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/green"
                    android:id="@+id/order_details_order_id_tv"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:layout_width="wrap_content"
                    android:text="#1"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="left"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="10dp"
                    android:textSize="17dp"
                    android:layout_width="wrap_content"
                    android:text="Status : "
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/order_details_status"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Completed"
                    android:textSize="17dp"
                    />  </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="left"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="10dp"
                    android:textSize="17dp"
                    android:layout_width="wrap_content"
                    android:text="Description : "
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/order_details_description"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:textSize="17dp"
                    android:layout_width="wrap_content"
                    android:text="I nedfsfdfdfsddfsdfdfdfdfdfsdfsfdfdsfffffdfdsfsdfsdsfdsffsdfffsdfsdfsdfdsfsdddfed ASAP"
                    android:maxLines="2"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/brown"
                    android:layout_marginTop="10dp"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:text="Total amount : "
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/order_details_total_amount"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:text="Rs. 350"
                    android:maxLines="2"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
 <androidx.recyclerview.widget.RecyclerView
     android:layout_marginTop="10dp"
     android:id="@+id/order_details_rv"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_marginBottom="10dp"
     />

</LinearLayout>