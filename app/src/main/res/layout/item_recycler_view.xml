<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        android:id="@+id/card_view_item"
        android:layout_width="match_parent"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/black"
        android:elevation="20dp"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/background_layout_item_recyclter"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:padding="2dp"
        android:weightSum="2"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="2"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/brown"
            android:text="Item name"
            android:maxLines="2"
            android:textSize="20dp"
            android:id="@+id/item_title_tv"
            />
        <ImageView
            android:id="@+id/favourite_icon"
            android:layout_margin="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_favourites"
            app:tint="#ECEDEF"
            android:backgroundTintMode="screen"
            />
    </LinearLayout>
        <LinearLayout
            android:id="@+id/desciption_layout_item_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            >
            <TextView
                android:id="@+id/item_description_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:text="This is sample description"
                />
            <TextView
                android:id="@+id/item_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:layout_margin="4dp"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:text="Rs. 3450"
                android:textStyle="bold"
                />
        <LinearLayout
            android:id="@+id/qty_layout_item_rv"
            android:layout_width="wrap_content"
            android:padding="2dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:background="@drawable/item_header_stroke"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="10dp"
                android:id="@+id/quantity_availalbe_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Available : 7897"
                 />
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>