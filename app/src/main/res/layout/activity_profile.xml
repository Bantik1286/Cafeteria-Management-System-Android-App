<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbar_profile_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?android:attr/actionBarSize"
        android:background="@color/brown"
        app:title="Profie"
        app:titleTextColor="@color/white"
        />

    <ImageView
        android:layout_marginTop="30dp"
        android:layout_width="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="150dp"
        android:src="@drawable/ic_profile"
        android:tint="@color/brown"
        />
    <TextView
        android:id="@+id/profle_activity_email"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xyz@nu.edu.pk"
        android:layout_gravity="center_horizontal"
        />
    <LinearLayout
        android:id="@+id/profle_activity_ll_fname"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/stroke_tv"
        android:padding="14dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/profle_activity_fname"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First name"
            android:textSize="20dp"
            android:layout_marginRight="20dp"
            />
        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_edit_icon"
            app:tint="@color/brown"

            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/profle_activity_ll_lname"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/stroke_tv"
        android:padding="14dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/profle_activity_lname"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last name"
            android:textSize="22dp"
            android:layout_marginRight="20dp"
            />
        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_edit_icon"
            app:tint="@color/brown"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/profle_activity_password"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change password"
        android:textSize="22dp"
        android:textColor="@color/brown"
        />


</LinearLayout>